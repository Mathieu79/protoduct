:javascript
  $(function(){
    var $icon = $('a.label','footer');
    $icon.click(function(){
      if($icon.attr('like-id') == '' || $icon.attr('like-id') == undefined){
        $.post("/posts/#{@proto.id}/likes.json").success(function(data){
          $icon.attr('like-id', data.id);
          $('i', $icon).removeClass('icon-white');
          $('i', $icon).addClass('icon-red');
        });
      }else {
        $.post("/posts/#{@proto.id}/likes/"+ $icon.attr('like-id') +".json", {'_method': 'delete'}).success(function(data){
          $icon.attr('like-id', '');
          $('i', $icon).removeClass('icon-red');
          $('i', $icon).addClass('icon-white');
        });
      }
      return false;
    });
  });
